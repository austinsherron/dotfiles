# TODO: impl import resolution in tools:utils/data/tq
import = [
    "{{ env "XDG_CONFIG_HOME" }}/ulogger/external.toml",
    "{{ env "XDG_CONFIG_HOME" }}/ulogger/actions.toml"
]

root = "{{ env "HOME" }}/.local/state/logs"

[type]
default = "default"

[level]
current = "WARN"
default = "WARN"

[level.overrides]
chezmoi = "INFO"

[path]
extension = "log"
default = "default"

[path.file]
chezmoi = "chezmoi"
cron = "cron"
pkg = "pkg"
shell = "shell"
snapshot = "snapshot"
status = "status"

[path.directory]
snapshot = "snapshot"
chezmoi = "chezmoi"
